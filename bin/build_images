#!/bin/bash

set -e -x

image=${1:-all}

if [[ ${image} == "all" ]]; then
    images=(python mlbox h2o tpot tfgpu mlboxgpu)
else
    images=(${image})
fi

for img in "${images[@]}"
do
    echo ">>>> building ${img} image"
    pushd containers/${img}_image
    docker build --build-arg INSTALL_MLBOX=$(date +%s) -t kag_${img} .
    popd
done

